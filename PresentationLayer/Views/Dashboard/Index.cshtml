@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/views/dashboard.css" asp-append-version="true" />

<div class="wrapper wrapper-content">
    <div class="row" id="sortable-view" style="align-content: centered">
        <div class="col-lg-4">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                    <span class="label label-success float-right">@Localizer["dashboard.Monthly"]</span>
                        </div>
                    <h5>@Localizer["dashboard.BarcodeGenerated"]</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">1.256</h1>
                    <div class="stat-percent font-bold text-success">98% <i class="fa fa-bolt"></i></div>
                    <small>@Localizer["dashboard.TotalBarcodes"]</small>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <span class="label label-info float-right">@Localizer["dashboard.Annual"]</span>
                    </div>
                    <h5>@Localizer["dashboard.BarcodeReadings"]</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">13.215</h1>
                    <div class="stat-percent font-bold text-info">20% <i class="fa fa-level-up"></i></div>
                    <small>@Localizer["dashboard.NewReadings"]</small>
                </div>
            </div>

        </div>

        <div class="col-lg-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <span class="label label-primary float-right">@Localizer["dashboard.Today"]</span>
                        </div>
                        <h5>@Localizer["dashboard.Interactions"]</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">2.562</h1>
                        <div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>
                        <small>@Localizer["dashboard.NewInteractions"]</small>
                    </div>
                </div>
        </div>
    </div>

    <div class="row" id="sortable-view">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>@Localizer["dashboard.QRAnalytics"]</h5>
                    <div class="ibox-tools">
                        <div class="btn-group">
                            <button type="button" class="btn btn-xs btn-white active">@Localizer["dashboard.Annual"]</button>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row" id="sortable-view">
                        <div class="col-lg-9">
                            <div class="flot-chart">
                                <div class="flot-chart-content" id="flot-dashboard-chart"></div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <ul class="stat-list">
                                <li>
                                    <h2 class="no-margins">3.348</h2>
                                    <small>@Localizer["dashboard.TotalQRPeriod"]</small>
                                    <div class="stat-percent">38% <i class="fa fa-level-up text-navy"></i></div>
                                    <div class="progress progress-mini">
                                        <div style="width: 48%;" class="progress-bar"></div>
                                    </div>
                                </li>
                                <li>
                                    <h2 class="no-margins ">2.423</h2>
                                    <small>@Localizer["dashboard.TotalQRLastMonth"]</small>
                                    <div class="stat-percent" style="color:red">62% <i class="fa fa-level-down text-navy" style="color:red!important"></i></div>
                                    <div class="progress progress-mini" >
                                        <div style="width: 60%;background-color:red!important" class="progress-bar"></div>
                                    </div>
                                </li>
                                <li>
                                    <h2 class="no-margins ">11.276</h2>
                                    <small>@Localizer["dashboard.MonthlyQRReading"]</small>
                                    <div class="stat-percent">19% <i class="fa fa-bolt text-navy"></i></div>
                                    <div class="progress progress-mini">
                                        <div style="width: 22%;" class="progress-bar"></div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row" id="sortable-view">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>@Localizer["dashboard.UserLastConn"]</h5>
                </div>
                <div class="ibox-content">
                    <div class="row" id="sortable-view">

                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                                <tr>
                                    <th data-hide="Source">@Localizer["dashboard.SourceIPv4"]</th>
                                    <th data-hide="username">@Localizer["dashboard.Username"]</th>
                                    <th data-toggle="true">@Localizer["dashboard.LastAccess"]</th>
                                    <th data-hide="location">@Localizer["dashboard.Location"]</th>
                                    <th data-hide="deviceos">@Localizer["dashboard.DeviceOS"]</th>
                                    <th data-hide="browser">@Localizer["dashboard.DeviceBrowser"]</th>
                                    <th data-hide="status">@Localizer["dashboard.Status"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var userStats in ViewBag.UserStats)
                                {
                                    <tr>
                                        <td><span class="label label-primary">@userStats.IPv4</span></td>
                                        <td>@Model.UserName</td>
                                        <td>@userStats.IsoDateC.ToString()</td>
                                        <td>@userStats.Location</td>
                                        <td>@userStats.DevOS</td>
                                        <td>@userStats.DevBrowser</td>
                                        <td>
                                            <a href="#"><i class="fa fa-check text-navy")"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="7">
                                        <ul class="pagination float-right"></ul>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/inspinia/lib/flot/jquery.flot.js"></script>
        <script src="~/inspinia/lib/flot/jquery.flot.tooltip.min.js"></script>
        <script src="~/inspinia/lib/flot/jquery.flot.resize.js"></script>
        <script src="~/inspinia/lib/flot/jquery.flot.pie.js"></script>
        <script src="~/inspinia/lib/flot/jquery.flot.time.js"></script>
        <script src="~/inspinia/lib/flot/jquery.flot.spline.js"></script>
        <script src="~/inspinia/lib/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
        <script src="~/inspinia/lib/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
        <script src="~/inspinia/lib/jquery-ui/jquery-ui.js"></script>
        <script src="~/inspinia/lib/touchpunch/jquery.ui.touch-punch.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {

            WinMove();

        });
    </script>

    <script src="~/js/views/dashboard.js" asp-append-version="true"></script>
}