@{
    ViewData["Title"] = @Localizer["notifications.Title"]; ;
}

<link rel="stylesheet" href="~/css/views/notifications.css" asp-append-version="true" />
<script src="~/js/views/notifications.js" asp-append-version="true"></script>

<div class="row wrapper white-bg page-heading">
    <div class="col-lg-12">
        <h2>@Localizer["security.SecurityOverview"]</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>@Localizer["security.SettingsAndSecurity"]</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@Localizer["notifications.Notifications"]</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>
                                <th data-toggle="true">@Localizer["notifications.Notification"]#</th>
                                <th data-hide="from">@Localizer["notifications.From"]</th>
                                <th data-hide="all">@Localizer["settings.Description"]</th>
                                <th data-hide="date">@Localizer["notifications.Received"]</th>
                                <th data-hide="status">@Localizer["settings.Status"]</th>
                                <th class="text-right" data-sort-ignore="true">@Localizer["settings.Action"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="unread">
                                <td>⚠️ @Localizer["notifications.CompleteYour"]</td>
                                <td>Codis365</td>
                                <td>
                                    <p>
                                        @Localizer["notifications.CompleteYourTxt1"]
                                    </p>
                                    <p>@Localizer["notifications.CompleteYourTxt2"]</p>
                                    <p>@Html.Raw(Localizer["notifications.CompleteYourTxt3"])</p>
                                </td>
                                <td>
                                    <span class="label label-primary statusBGUnread">2024-11-14, 19:36</span>
                                </td>
                                <td>
                                    <span class="label label-primary status statusBGUnread">@Localizer["notifications.Unread"]</span>
                                </td>
                                <td class="text-right">
                                      <a href="#" title="Mark as read"><i class="fa fa-book text-navy statusColorUnread"></i></a>
                                      <a href="#" tiltle = "Delete"><i class="fa fa-close text-navy statusColorUnread"></i></a>
                                </td>
                            </tr>
                            <tr class="unread">
                                <td>👋 @Localizer["notifications.CompleteYourFB"]</td>
                                <td>Codis365</td>
                                <td>
                                    <p>
                                        @Localizer["notifications.CompleteYourFB1"]
                                    </p>
                                    <p>@Localizer["notifications.CompleteYourFB2"]</p>
                                    <p>@Html.Raw(Localizer["notifications.CompleteYourFB3"])</p>
                                </td>
                                <td>
                                    <span class="label label-primary statusBGUnread">2024-11-12, 14:36</span>
                                </td>
                                <td>
                                    <span class="label label-primary status statusBGUnread">@Localizer["notifications.Unread"]</span>
                                </td>
                                <td class="text-right">
                                      <a href="#" title="Mark as read"><i class="fa fa-book text-navy statusColorUnread"></i></a>
                                      <a href="#" tiltle = "Delete"><i class="fa fa-close text-navy statusColorUnread"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>🌟@Localizer["notifications.CompleteYourJourney"]</td>
                                <td>Codis365</td>
                                <td>
                                    <p>
                                        @Localizer["notifications.CompleteYourJourneyTxt1"]
                                    </p>
                                    <p>@Localizer["notifications.CompleteYourJourneyTxt2"]</p>
                                    <p>@Html.Raw(Localizer["notifications.CompleteYourJourneyTxt3"])</p>
                                </td>
                                <td>
                                    <span class="label label-primary">2024-11-10, 18:36</span>
                                </td>
                                <td>
                                    <span class="label label-primary status">@Localizer["notifications.Read"]</span>
                                </td>
                                <td class="text-right">
                                      <a href="#" title="Mark as unread"><i class="fa fa-check text-navy"></i></a>
                                      <a href="#" tiltle = "Delete"><i class="fa fa-close text-navy"></i></a>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <environment names="Development">
        <link rel="stylesheet" href="~/inspinia/lib/footable/css/footable.core.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/inspinia/lib/footable/css/footable.core.min.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/inspinia/lib/footable/dist/footable.all.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {

            $('.footable').footable();

        });
    </script>
}
