<link rel="stylesheet" href="~/css/views/footer.css" asp-append-version="true" />

<script src="~/js/views/footer.js" asp-append-version="true"></script>

<div class="footer fixed">
    <div class="float-right">
        <a id="chatLinkb" href="javascript:void(0);"><strong>@Localizer["footer.SupportChat"]</strong></a>
    </div>
    <div style="align-content: center; display: grid; place-items: center;">
        <div class="content">
            <strong>@Localizer["footer.Claim"]</strong>  <span>(<a href="#" id="licenseLink">MIT License</a>)</span>
        </div>
    </div>
</div>

<!-- Modal Structure -->
<div id="licenseModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2><strong>MIT License</strong></h2>
    <p>Copyright (c) 2024, jbalcellss@uoc.edu</p>
    <p>@Localizer["createAccount.License1"]</p> 
    <p>@Localizer["createAccount.License2"]</p>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('chatLinkb').addEventListener('click', function (e) {
            var chat = document.getElementById('chatSupport');
            if (chat) chat.click();
        });
    });
    var modal = document.getElementById("licenseModal");
    var btn = document.getElementById("licenseLink");
    var span = document.getElementsByClassName("close")[0];
    btn.onclick = function() {
      modal.style.display = "block";
    }
    span.onclick = function() {
      modal.style.display = "none";
    }
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
</script>