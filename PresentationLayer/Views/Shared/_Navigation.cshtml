@using Entities.DTOs
@model DashboardUserProfileDTO; 

<style>
    .icon-spacing {
        display: inline-block;   /* Makes sure the width property is applied */
        width: 15px;             /* Adjust this width as needed */
        text-align: center;      /* Centers the icon within the fixed width */
        margin-right: 10px;      /* Adjust the spacing to suit your design */    
    }
</style>

<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
            <li class="nav-header">
                <div class="dropdown profile-element">
                    <img alt="image" class="rounded-circle" src="~/inspinia/images/profile_small.jpg" />
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <span class="block m-t-xs font-bold">@Model.UserName</span>
                        <span class="text-muted text-xs block">@Localizer["navigation.Profile"] @Model.UserProfile<b class="caret"></b></span>
                    </a>
                    <ul class="dropdown-menu animated fadeInRight m-t-xs" style="position: absolute; top: 91px; left: 0px; will-change: top, left;">
                        <li><a class="dropdown-item" href="@Url.Action("IdxSettings", "Settings")"><span class="fa fa-user icon-spacing"></span>@Localizer["navigation.Profile"]</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("IdxNotifications", "Notifications")"><span class="fa fa-exclamation-circle icon-spacing"></span>@Localizer["navigation.Notifications"]</a></li>
                        <li class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "SignIn")"><span class="fa fa-sign-in icon-spacing"></span>@Localizer["navigation.Logout"]</a></li>
                    </ul>
                </div>
                <div class="logo-element">
                    Codis365
                </div>
            </li>
            <li class="@Html.IsSelected(controller: "Dashboard")">
                <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-th-large"></i> <span class="nav-label" data-i18n="nav.dashboard">Dashboard</span></a>
            </li>

            <li class="@Html.IsSelected(controller: "Barcodes")">
                <a href="#"><i class="fa fa-barcode"></i> <span class="nav-label" data-i18n="nav.graphs">@Localizer["navigation.Barcodes"]</span><span class="fa arrow"></span></a>
                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Barcodes", cssClass: "in")">
                    <li class="@Html.IsSelected(action: "StaticBarcodes")"><a href="@Url.Action("StaticBarcodes", "Barcodes")">@Localizer["navigation.StaticBarcodes"]</a></li>
                    <li class="@Html.IsSelected(action: "DynamicBarcodes")"><a href="@Url.Action("DynamicBarcodes", "Barcodes")">@Localizer["navigation.DynamicBarcodes"]</a></li>
                    <li class="@Html.IsSelected(action: "Management")"><a href="@Url.Action("Management", "Barcodes")">@Localizer["navigation.Management"]<span class="label label-info float-right">NEW</span></a></li>
                </ul>
            </li>
            <li class="@Html.IsSelected(controller: "Integration")">
                <a href="#"><i class="fa fa-flask"></i> <span class="nav-label" data-i18n="nav.mailbox">@Localizer["navigation.Integration"]<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Integration", cssClass: "in")">
                    <li class="@Html.IsSelected(action: "Products")"><a href="@Url.Action("Products", "Integration")">@Localizer["navigation.ProductInventory"]</a></li>
                    <li class="@Html.IsSelected(action: "Prices")")"><a href="@Url.Action("Prices", "Integration")">@Localizer["navigation.PriceList"]<span class="label label-info float-right">NEW</span></a></li>
                    <li class="@Html.IsSelected(action: "Rates")")"><a href="@Url.Action("Rates", "Integration")">@Localizer["navigation.Rates"]<span class="label label-info float-right">NEW</span></a></li>
                    <li class="@Html.IsSelected(action: "Catalog")")"><a href="@Url.Action("Catalog", "Integration")">@Localizer["navigation.Catalog"]<span class="label label-info float-right">NEW</span></a></li>
                </ul>
            </li>

            <li class="@Html.IsSelected(controller: "Analytics")">
                <a href="@Url.Action("Index", "Analytics")"><i class="fa fa-pie-chart"></i><span class="nav-label" data-i18n="nav.metrics">@Localizer["navigation.AnalyticsAndReports"]</span></a>
            </li>

            <li class="@Html.IsSelected(controller: "Settings") || @Html.IsSelected(controller: "Security") || @Html.IsSelected(controller: "Notifications")">
                <a href="#"><i class="fa fa-lock"></i> <span class="nav-label" data-i18n="nav.forms">@Localizer["navigation.SettingsAndSecurity"]</span><span class="fa arrow"></span></a>
                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Forms", cssClass: "in")">
                    <li class="@Html.IsSelected(action: "IdxSettings")"><a href="@Url.Action("IdxSettings", "Settings")">@Localizer["navigation.Settings"]</a></li>
                    <li class="@Html.IsSelected(action: "IdxSecurity")"><a href="@Url.Action("IdxSecurity", "Security")">@Localizer["navigation.Security"]</a></li>
                    <li class="@Html.IsSelected(action: "IdxNotifications")"><a href="@Url.Action("IdxNotifications", "Notifications")">@Localizer["navigation.Notifications"]</a></li>
                </ul>
            </li>

            <li class="@Html.IsSelected(controller: "Support") || @Html.IsSelected(controller: "SupportChat")">
                <a href="#"><i class="fa fa-user"></i> <span class="nav-label" data-i18n="nav.forms">@Localizer["navigation.Support"]</span><span class="fa arrow"></span></a>
                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Forms", cssClass: "in")">
                    <li class="@Html.IsSelected(action: "IdxSupport")"><a href="@Url.Action("IdxSupport", "Support")">@Localizer["navigation.SupportForm"]</a></li>
                    <li class=""><a id="chatLink" href="javascript:void(0);" >AI Chat (24/7)<span class="label label-info float-right">NEW</span></a></li>
                    <li class=""><a href="https://faqs.codis365.cat" target="_blank" title="External URL">FAQ's<span class="fa fa-external-link-square"></span></a></li>
                </ul>
            </li>

            <li class="@Html.IsSelected(controller: "Help")">
                <a href="#"><i class="fa fa-question-circle"></i> <span class="nav-label" data-i18n="nav.forms">@Localizer["navigation.Help"]</span><span class="fa arrow"></span></a>
                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Forms", cssClass: "in")">
                    <li class=""><a href="https://docs.codis365.cat" target="_blank" title="External URL">Codis365 User Guide<span class="fa fa-external-link-square"></span></a></li>
                    <li class=""><a href="https://apidocs.codis365.cat" target="_blank" title="External URL">Codis365 API Docs<span class="fa fa-external-link-square"></span></a></li>
                </ul>
            </li>

            <li class="special_link @Html.IsSelected(controller: " Landing")">
                <a href="https://app.codis365.cat" target="_blank" title="External URL"><i class="fa fa-star"></i> <span class="nav-label" data-i18n="nav.landing">Codis365 Landing</span><span class="fa fa-external-link-square" style="padding-left:15px"></span></a>
            </li>
        </ul>
     </div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('chatLink').addEventListener('click', function (e) {
            var chat = document.getElementById('chatSupport');
            if (chat) chat.click();
        });
    });
</script>
