                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Forms", cssClass: "in")">
                    <li class="@Html.IsSelected(action: "IdxSettings")"><a href="@Url.Action("IdxSettings", "Settings")">Settings</a></li>
