@using Entities.DTOs
@model DashboardUserProfileDTO; 

@{
    ViewData["Title"] = "Security";
    string secretDescription = "Private secret key used by the server to sign the token";
}

<link rel="stylesheet" href="~/css/views/security.css" asp-append-version="true" />
<script src="~/js/views/security.js" asp-append-version="true"></script>

<div class="row wrapper white-bg page-heading">
    <div class="col-lg-12">
        <h2>Security Overview</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Settings & Security</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Security</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Profile Security. Change your password.</h5>
                </div>

                <div class="ibox-content">
                    <form role="form">
                        <div class="form-group"><label>Current Password</label> <input type="password" placeholder="Password" class="form-control"></div>
                        <div class="form-group"><label><strong>New Password</strong></label> <input type="password" placeholder="Password" class="form-control"></div>
                        <div class="form-group"><label><strong>Repeat Password</strong></label> <input type="password" placeholder="Password" class="form-control"></div>
                        <div>
                            <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><strong>Change Password</strong></button>
                            <label>  </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Profile Security. Send Change Password Link.</h5>
                </div>

                <div class="ibox-content">
                    <form role="form">
                        <div class="form-group"><label>Email</label> <input type="email" placeholder="@Model.UserLogin" class="form-control"></div>
                        <div>
                            <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><strong>Send Link</strong></button>
                            <label>  </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>API Security Token</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                                <tr>
                                    <th data-toggle="true">API Key #</th>
                                    <th data-hide="description">Description</th>
                                    <th data-hide="all">Secret</th>
                                    <th data-hide="date">Created on</th>
                                    <th data-hide="status">Status</th>
                                    <th class="text-right" data-sort-ignore="true">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>🔑 Codis365 API v1 Key - Developer1</td>
                                    <td>@secretDescription</td>
                                    <td>
                                        <p>
                                            eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFt
                                        </p>
                                    </td>
                                    <td>
                                        <span class="label label-primary">2024-05-10, 18:36</span>
                                    </td>
                                    <td>
                                        <span class="label label-primary">Active</span>
                                    </td>
                                    <td class="text-right">
                                          <a href="#"><i class="fa fa-check text-navy"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>🔑 Codis365 API v1 Key - Developer2</td>
                                    <td>@secretDescription</td>
                                    <td>
                                        <p>
                                            ciONTY3kwIiwibeyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9eyJzdWIiOiIxMjM0mFt
                                        </p>
                                    </td>
                                    <td>
                                        <span class="label label-primary">2024-05-10, 18:36</span>
                                    </td>
                                    <td>
                                        <span class="label label-primary">Active</span>
                                    </td>
                                    <td class="text-right">
                                        <a href="#"><i class="fa fa-check text-navy"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>🔑 Codis365 API v1 Key - Test</td>
                                    <td>@secretDescription</td>
                                    <td>
                                        <p>
                                            eyJhbGciOiJIUzI1iONTY3kwIiwibeyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9eyJzdW
                                        </p>
                                    </td>
                                    <td>
                                        <span class="label label-primary">2024-05-10, 18:36</span>
                                    </td>
                                    <td>
                                        <span class="label label-primary" style="background-color:red">Disabled</span>
                                    </td>
                                    <td class="text-right">
                                        <a href="#"><i class="fa fa-window-close text-navy" style="color:red!important"></i></a>
                                    </td>
                                </tr>

                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="6">
                                        <ul class="pagination float-right"></ul>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

@section Styles {
    <environment names="Development">
        <link rel="stylesheet" href="~/inspinia/lib/footable/css/footable.core.css" />
        <link rel="stylesheet" href="~/inspinia/lib/iCheck/custom.css" />
        <link rel="stylesheet" href="~/inspinia/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/inspinia/lib/footable/css/footable.core.min.css" />
        <link rel="stylesheet" href="~/inspinia/lib/iCheck/custom.css" />
        <link rel="stylesheet" href="~/inspinia/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/inspinia/lib/footable/dist/footable.all.min.js"></script>
        <script src="~/inspinia/lib/iCheck/icheck.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {

            $('.footable').footable();

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

        });
    </script>
}
